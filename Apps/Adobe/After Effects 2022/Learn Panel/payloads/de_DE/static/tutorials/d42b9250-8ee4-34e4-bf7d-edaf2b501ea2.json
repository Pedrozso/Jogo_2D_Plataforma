                                        {
                                            "check": "checkLayerProperty",
                                            "payload": {
                                                "layerName": "Logo",
                                                "propertyName": "position",
                                                "value": [
                                                    false,
                                                    [
                                                        1000,
                                                        1400
                                                    ]
                                                ]
                                            }
                                        }
                                    ],
                                    "showOnComplete": {
                                        "heading": "Erfolgreich!",
                                        "texts": [
                                            "Sie haben gerade das Logo an den unteren Bildschirmrand verschoben. Diese Position stellt den Anfangspunkt der Animation dar."
                                        ]
                                    }
                                }
                            ]
                        }
                    ]
                },
